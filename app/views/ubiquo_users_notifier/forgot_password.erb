<%= I18n.t("ubiquo.auth.forgot_password_message", 
      :app_title => Ubiquo::Settings.get(:app_title),
      :url => ubiquo_home_url(:host => @host),
      :locale => @user.locale || Ubiquo.default_locale
      ) %>

<%= UbiquoUser.human_attribute_name("login",    :locale => @user.locale || Ubiquo.default_locale) %>: <%= @user.login %>
<%= UbiquoUser.human_attribute_name("password", :locale => @user.locale || Ubiquo.default_locale) %>: <%= @user.password %>
